generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  files     File[]
}

model File {
  id         Int      @id @default(autoincrement())
  filename   String
  html       String
  uploadedAt DateTime @default(now())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}
